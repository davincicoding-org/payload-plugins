{
  "name": "payload-smart-deletion",
  "version": "1.0.8",
  "description": "Payload CMS plugin that adds PostgreSQL-style referential actions (cascade, set_null, restrict) to relationship fields.",
  "keywords": [
    "payload"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davincicoding-org/payload-plugins.git",
    "directory": "plugins/smart-deletion"
  },
  "license": "MIT",
  "author": "DAVINCI CODING GmbH",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "pnpm check:types",
    "build": "plugin-build",
    "check:types": "tsc --noEmit",
    "dev": "next dev dev",
    "dev:build": "plugin-build --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "vitest run",
    "test:int": "vitest run --config dev/vitest.config.mts",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@davincicoding/payload-plugin-kit": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "payload": "catalog:payload-stack",
    "typescript": "catalog:payload-stack",
    "vite": "catalog:vite",
    "vitest": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "payload": ">=3.72.0"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "publishConfig": {
    "access": "public"
  }
}
