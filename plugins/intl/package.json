{
  "name": "payload-intl",
  "version": "1.4.5",
  "description": "Payload Plugin for I18N using ICU Messages",
  "keywords": [
    "payload",
    "intl",
    "i18n",
    "internationalization",
    "localization",
    "react",
    "next.js",
    "translation",
    "translations",
    "icu"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davincicoding-org/payload-plugins.git",
    "directory": "plugins/intl"
  },
  "license": "MIT",
  "author": "DAVINCI CODING GmbH",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./rsc": {
      "types": "./dist/exports/rsc.d.ts",
      "import": "./dist/exports/rsc.js",
      "default": "./dist/exports/rsc.js"
    },
    "./client": {
      "types": "./dist/exports/client.d.ts",
      "import": "./dist/exports/client.js",
      "default": "./dist/exports/client.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "pnpm check:types",
    "build": "plugin-kit build",
    "check:types": "tsc --noEmit",
    "dev": "next dev dev",
    "dev:build": "plugin-kit build --watch",
    "generate:types": "plugin-kit generate-types --options uploadCollection=uploads",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "vitest run",
    "test:e2e": "playwright test --config dev/playwright.config.ts",
    "test:int": "vitest run --config dev/vitest.config.mts",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@davincicoding/payload-plugin-kit": "workspace:*",
    "@formatjs/icu-messageformat-parser": "^2.11.2",
    "@tabler/icons-react": "^3.36.1",
    "clsx": "^2.1.1",
    "lexical-beautiful-mentions": "^0.1.48",
    "lodash-es": "^4.17.21",
    "react-hook-form": "^7.58.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@payloadcms/richtext-lexical": "catalog:payload-stack",
    "@payloadcms/ui": "catalog:payload-stack",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.5.4",
    "@types/react": "catalog:payload-stack",
    "@types/react-dom": "catalog:payload-stack",
    "json-schema": "^0.4.0",
    "next": "catalog:payload-stack",
    "payload": "catalog:payload-stack",
    "react": "catalog:payload-stack",
    "react-dom": "catalog:payload-stack",
    "typescript": "catalog:payload-stack",
    "vite": "catalog:vite",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@payloadcms/next": ">=3.72.0",
    "@payloadcms/richtext-lexical": ">=3.72.0",
    "@payloadcms/ui": ">=3.72.0",
    "next": ">=15.5.9",
    "payload": ">=3.72.0"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "publishConfig": {
    "access": "public"
  }
}
