{
  "name": "payload-discussions",
  "version": "1.1.3",
  "description": "Payload CMS plugin that adds threaded comment discussions with nested replies, and author tracking to collections and globals.",
  "keywords": [
    "payload"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davincicoding-org/payload-plugins.git",
    "directory": "plugins/discussions"
  },
  "license": "MIT",
  "author": "DAVINCI CODING GmbH",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./rsc": {
      "types": "./dist/exports/rsc.d.ts",
      "import": "./dist/exports/rsc.js",
      "default": "./dist/exports/rsc.js"
    },
    "./client": {
      "types": "./dist/exports/client.d.ts",
      "import": "./dist/exports/client.js",
      "default": "./dist/exports/client.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "pnpm check:types",
    "build": "plugin-build",
    "check:types": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf node_modules",
    "dev": "plugin-build --watch",
    "generate:types": "generate-types",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@davincicoding/payload-utils": "workspace:*",
    "react-textarea-autosize": "^8.5.9",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@davincicoding/payload-plugin-kit": "workspace:*",
    "@payloadcms/ui": "catalog:payload-stack",
    "@types/node": "^22.5.4",
    "@types/react": "catalog:payload-stack",
    "@types/react-dom": "catalog:payload-stack",
    "next": "catalog:payload-stack",
    "payload": "catalog:payload-stack",
    "react": "catalog:payload-stack",
    "react-dom": "catalog:payload-stack",
    "typescript": "catalog:payload-stack",
    "vite": "catalog:vite",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "@payloadcms/next": ">=3.72.0",
    "@payloadcms/ui": ">=3.72.0",
    "next": ">=15.2.3",
    "payload": ">=3.72.0"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "publishConfig": {
    "access": "public"
  }
}
