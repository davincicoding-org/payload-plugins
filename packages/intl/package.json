{
  "name": "payload-intl",
  "version": "1.1.3",
  "description": "Payload Plugin for I18N using ICU Messages",
  "keywords": [
    "payload",
    "intl",
    "i18n",
    "internationalization",
    "localization",
    "react",
    "next.js",
    "translation",
    "translations",
    "icu"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davincicoding-org/payload-plugins.git",
    "directory": "packages/intl"
  },
  "license": "MIT",
  "author": "DAVINCI CODING GmbH",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./rsc": {
      "types": "./dist/exports/rsc.d.ts",
      "import": "./dist/exports/rsc.js",
      "default": "./dist/exports/rsc.js"
    },
    "./client": {
      "types": "./dist/exports/client.d.ts",
      "import": "./dist/exports/client.js",
      "default": "./dist/exports/client.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "pnpm typecheck",
    "build": "plugin-build",
    "clean": "rm -rf dist && rm -rf node_modules",
    "dev": "plugin-build --watch",
    "generate:types": "generate-types",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@formatjs/icu-messageformat-parser": "^2.11.2",
    "@tabler/icons-react": "^3.36.1",
    "lexical-beautiful-mentions": "^0.1.48",
    "lodash-es": "^4.17.21",
    "radix-ui": "^1.4.2",
    "react-hook-form": "^7.58.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@payloadcms/richtext-lexical": "catalog:payload-stack",
    "@payloadcms/ui": "catalog:payload-stack",
    "@repo/common": "workspace:*",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.5.4",
    "@types/react": "catalog:payload-stack",
    "@types/react-dom": "catalog:payload-stack",
    "next": "catalog:payload-stack",
    "payload": "catalog:payload-stack",
    "react": "catalog:payload-stack",
    "react-dom": "catalog:payload-stack",
    "typescript": "catalog:payload-stack",
    "vite": "catalog:vite",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "@payloadcms/next": ">=3.72.0",
    "@payloadcms/richtext-lexical": ">=3.72.0",
    "@payloadcms/ui": ">=3.72.0",
    "next": ">=15.2.3",
    "payload": ">=3.72.0"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "publishConfig": {
    "access": "public"
  }
}
