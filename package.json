{
  "name": "payload-plugins",
  "private": true,
  "license": "MIT",
  "author": "DAVINCI CODING GmbH",
  "scripts": {
    "build": "pnpm -r build",
    "check": "biome check --write .",
    "ci:build": "pnpm --filter='./packages/**' build",
    "ci:check": "biome ci . && pnpm format:pkg --check && pnpm typecheck",
    "ci:publish": "pnpm ci:build && changeset publish --cmd \"pnpm publish --access public --no-git-checks --provenance\"",
    "clean": "pnpm -r clean && rm -rf node_modules && pnpm install",
    "dev": "pnpm --parallel -r dev",
    "format": "biome format --write . && pnpm format:pkg",
    "format:pkg": "sort-package-json \"package.json\" \"packages/*/package.json\" \"dev/package.json\"",
    "generate": "plop",
    "prepare": "husky",
    "release": "changeset",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "payload-clienthub",
          "payload-discussions",
          "payload-intl",
          "payload-invitations",
          "payload-smart-cache",
          "root"
        ]
      ]
    }
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json"
    ],
    "**/*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "plop": "^4.0.1",
    "sort-package-json": "^3.6.0"
  },
  "packageManager": "pnpm@10.14.0"
}
