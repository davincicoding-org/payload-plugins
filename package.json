{
  "name": "payload-plugins",
  "private": true,
  "license": "MIT",
  "author": "DAVINCI CODING GmbH",
  "scripts": {
    "build": "turbo build",
    "check": "biome check --write .",
    "ci": "pnpm ci:check && pnpm ci:build && pnpm ci:test",
    "ci:build": "turbo build",
    "ci:check": "biome ci . && pnpm format:pkg --check && syncpack lint",
    "ci:test": "turbo test --filter='./plugins/**'",
    "clean": "pnpm -r clean && rm -rf node_modules && pnpm install && pnpm build",
    "dev": "pnpm --parallel -r dev",
    "format": "biome format --write . && pnpm format:pkg",
    "format:pkg": "sort-package-json \"package.json\" \"plugins/*/package.json\" \"packages/*/package.json\"",
    "prepare": "husky",
    "release": "changeset",
    "test": "turbo test --filter='./plugins/**'",
    "test:all": "turbo test test:int test:e2e --filter='./plugins/**'",
    "test:e2e": "turbo test:e2e --filter='./plugins/**'",
    "test:int": "turbo test:int --filter='./plugins/**'",
    "typecheck": "turbo check:types"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "utils",
          "plugin-kit",
          "payload-clienthub",
          "payload-discussions",
          "payload-intl",
          "payload-notifications",
          "payload-invitations",
          "payload-smart-cache",
          "payload-smart-deletion",
          "root"
        ]
      ]
    }
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json"
    ],
    "**/*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "sort-package-json": "^3.6.0",
    "syncpack": "^14.0.0",
    "turbo": "^2.8.10"
  },
  "packageManager": "pnpm@10.30.0"
}
