{
  "name": "payload-plugins",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/davincicoding-org/payload-plugins.git"
  },
  "license": "MIT",
  "author": "DAVINCI CODING GmbH",
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "check": "biome ci . && pnpm sort-package-json --check && syncpack lint",
    "check:types": "turbo check:types",
    "clean": "rm -rf node_modules .turbo plugins/*/dist packages/*/dist plugins/*/dev/.next",
    "clean:install": "pnpm clean && pnpm install",
    "fix": "biome check --write . && pnpm sort-package-json && syncpack fix-mismatches",
    "prepare": "husky",
    "sort-package-json": "sort-package-json \"package.json\" \"{plugins,packages}/*/package.json\"",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "test:int": "turbo test:int"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "utils",
          "plugin-kit",
          "clienthub",
          "discussions",
          "intl",
          "notifications",
          "invitations",
          "smart-cache",
          "smart-deletion",
          "root"
        ]
      ]
    }
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json"
    ],
    "**/*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "sort-package-json": "^3.6.0",
    "syncpack": "^14.0.0",
    "turbo": "^2.8.10"
  },
  "packageManager": "pnpm@10.30.0",
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
